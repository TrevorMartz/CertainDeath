@model CertainDeath.Models.StartScreenViewModel
@{
    ViewBag.Title = "StartScreen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article class="main_menu" id="content">
    <h2>Welcome to Certain Death!</h2>
    @if (Model.HowToPlay)
    {
        <div>@Ajax.ActionLink("How To Play", "HowToPlay", "Home", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "content" })</div>
    }
@if (Model.NewGame)
{
    <div>@Html.ActionLink("New Game", "NewGame", "Home", routeValues: new { userid = Model.UserId }, htmlAttributes: null)</div>
}
    @if (Model.LoadGame)
    {
        <div>@Html.ActionLink("Load Game", "LoadGame", "Home", routeValues: new { userid = Model.UserId }, htmlAttributes: null)</div>
    }
</article>